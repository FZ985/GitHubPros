<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base Application theme-->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowAnimationStyle">@style/common_animation_translate</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>
    <!-- 欢迎界面主题-->
    <style name="SplashTheme" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <!--<style name="common_animation_translate" parent="@android:style/Animation.Translucent">-->
    <style name="common_animation_translate" parent="@android:style/Animation.Activity">
        <!--一个activity创建进入的效果-->
        <item name="android:activityOpenEnterAnimation">@anim/new_activity_open_enter</item>
        <!--一个activity还没有finish()下退出效果, 比如有俩个activity A与B 首先启动A 然后再启动B 那么A还没有finish()  这时A的退出效果-->
        <item name="android:activityOpenExitAnimation">@anim/new_activity_open_exit</item>
        <!--表示上一个activity返回进入效果 比如有俩个activity A与B  B在最上面，B退出(finish)后 A重新进入的效果。-->
        <item name="android:activityCloseEnterAnimation">@anim/new_activity_close_enter</item>
        <!--表示的是activity finish()之后的效果 比如有俩个activity A与B B退出后会被finish() 那么B的退出效果在这定义。-->
        <item name="android:activityCloseExitAnimation">@anim/new_activity_close_exit</item>
        <item name="android:taskOpenEnterAnimation">@anim/new_activity_open_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/new_activity_open_exit</item>
        <item name="android:taskCloseEnterAnimation">@anim/new_activity_close_enter</item>
        <item name="android:taskCloseExitAnimation">@anim/new_activity_close_exit</item>
        <item name="android:taskToFrontEnterAnimation">@anim/new_activity_open_enter</item>
        <item name="android:taskToFrontExitAnimation">@anim/new_activity_open_exit</item>
        <item name="android:taskToBackEnterAnimation">@anim/new_activity_close_enter</item>
        <item name="android:taskToBackExitAnimation">@anim/new_activity_close_exit</item>
        <!--<item name="android:wallpaperOpenEnterAnimation">@anim/new_activity_open_enter</item>-->
        <!--<item name="android:wallpaperOpenExitAnimation">@anim/new_activity_open_exit</item>-->
        <!--<item name="android:wallpaperCloseEnterAnimation">@anim/new_activity_close_enter</item>-->
        <!--<item name="android:wallpaperCloseExitAnimation">@anim/new_activity_close_exit</item>-->
        <!--<item name="android:wallpaperIntraOpenEnterAnimation">@anim/new_activity_open_enter</item>-->
        <!--<item name="android:wallpaperIntraOpenExitAnimation">@anim/new_activity_open_exit</item>-->
        <!--<item name="android:wallpaperIntraCloseEnterAnimation">@anim/new_activity_close_enter</item>-->
        <!--<item name="android:wallpaperIntraCloseExitAnimation">@anim/new_activity_close_exit</item>-->
    </style>

    <style name="AppBaseTransparentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="transparentTheme" parent="AppBaseTransparentTheme" />

    <style name="dialog_custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
