<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp16"
    android:paddingRight="@dimen/dp16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="支付密码由六位数字组成"
        android:textColor="@color/black33"
        android:textSize="17sp" />

    <com.kmt.pro.widget.IPasswordView2
        android:id="@+id/set_pay_pwed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="15dp"
        app:pwdCipherEnable="true"
        app:pwdCursorEnable="true"
        app:pwdLength="6"
        app:pwdMode="underline"
        app:pwdRectBorderColor="#8E8EA3"
        app:pwdRectBorderWidth="@dimen/dp7"
        app:pwdTextBold="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="请再次输入已确认"
        android:textColor="@color/black33"
        android:textSize="17sp" />

    <com.kmt.pro.widget.IPasswordView2
        android:id="@+id/confirm_pay_pwed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="15dp"
        app:pwdCipherEnable="true"
        app:pwdCursorEnable="true"
        app:pwdLength="6"
        app:pwdMode="underline"
        app:pwdRectBorderColor="#8E8EA3"
        app:pwdRectBorderWidth="@dimen/dp7"
        app:pwdTextBold="true" />

    <Button
        android:id="@+id/pay_pwd_set_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginTop="@dimen/dp45"
        android:background="@drawable/btn_gradient_round2_selector"
        android:gravity="center"
        android:text="@string/set"
        android:textColor="@color/white"
        android:textSize="17dp" />
</LinearLayout>