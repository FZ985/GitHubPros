<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67.5dp"
        android:gravity="center_vertical"
        android:id="@+id/kefu_root"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="67.5dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/kefu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_weixin_kefu" />
        </RelativeLayout>

        <TextView
            android:id="@+id/kefu_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方QQ客服"
            android:textColor="#73502D"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kefu_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="111111111"
            android:textColor="#8C8C8D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/kefu_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_kefu_copy_qq"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:paddingRight="10dp"
            android:paddingBottom="1dp"
            android:text="复制"
            android:textColor="#73502D"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>